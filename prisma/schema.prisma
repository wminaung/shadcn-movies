generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Movie {
  id           Int    @id @default(autoincrement()) // Unique identifier for the movie
  title        String // Title of the movie
  category     String // Category or genre of the movie
  release_year Int // Year the movie was released
  description  String // Brief description of the movie
  rating       Float // Rating of the movie
  director     String // Director of the movie
  runtime      Int // Runtime of the movie in minutes
}
